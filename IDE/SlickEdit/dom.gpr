project dom is
    for Source_Dirs use ("src");
    for Object_Dir use "obj";
    for Main use ("main.adb");

    package Compiler is
       for Switches ("ada") use ("-g", "-gnata");
    end Compiler;

    package Pretty_Printer is
        for Default_Switches ("ada") use ("-i4", "-kU", "-c4", "-c3", "--no-separate-is");
    end Pretty_Printer;
end dom;
